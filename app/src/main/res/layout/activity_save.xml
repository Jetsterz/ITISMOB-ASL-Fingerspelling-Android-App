<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDFC">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:text="ðŸŽ® Game Saves"
            android:textColor="#4C4DDC"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Main Game Card -->
        <LinearLayout
            android:id="@+id/mainGameCard"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgMainGame"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_hand_a"
                android:layout_gravity="center_vertical"
                android:contentDescription="Main Game Icon" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMainTitle"
                    android:text="ASL Fingerspelling Game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#101010"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtMainCategory"
                    android:text="Category: Random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#101010" />

                <TextView
                    android:id="@+id/txtMainRounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rounds: 9"
                    android:textColor="#101010" />
            </LinearLayout>

            <Button
                android:id="@+id/btnPlayMain"
                android:text="PLAY"
                android:textStyle="bold"
                android:textColor="#EDEDFC"
                android:backgroundTint="#4C4DDC"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Previous Games Header -->
        <TextView
            android:id="@+id/txtPrevHeader"
            android:text="\nPrevious Games:"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textColor="#101010"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Hardcoded Saved Games -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/rounded_card"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Category: Animals"
                    android:textColor="#101010"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Rounds: 5"
                    android:textColor="#101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Date: Oct 20, 2025"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_card"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Category: Fruits"
                    android:textColor="#101010"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Rounds: 7"
                    android:textColor="#101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Date: Oct 21, 2025"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rounded_card"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Category: Colors"
                    android:textColor="#101010"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Rounds: 4"
                    android:textColor="#101010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Date: Oct 22, 2025"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
